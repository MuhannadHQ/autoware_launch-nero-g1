<launch>
  <!-- Arguments -->
  <arg name="launch_driver" default="true" description="Launch GNSS/INS driver"/>
  <arg name="launch_ntrip" default="true" description="Launch NTRIP correction client"/>

  <!-- GNSS/INS (Xsens) Group -->
  <group>
    <push-ros-namespace namespace="gnss"/>

    <!-- Xsens GNSS/INS driver -->
    <group if="$(var launch_driver)">
      <include file="$(find-pkg-share xsens_mti_ros2_driver)/launch/xsens_mti_node.launch.py">
      </include>
    </group>

    <!-- NTRIP client -->
    <group if="$(var launch_ntrip)">
      <include file="$(find-pkg-share ntrip)/launch/ntrip_launch.py"/>
    </group>
    
  </group>
</launch>


